<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewsMauiCVT.Views"
             xmlns:local1="clr-namespace:NewsMauiCVT"
             x:Class="NewsMauiCVT.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <Shell FlyoutBehavior="Flyout" FlyoutHeaderBehavior="Fixed" FlyoutVerticalScrollMode="Auto">
            <FlyoutItem Title="Informe de Stock">
                <ShellContent ContentTemplate="{DataTemplate local:InformeStock}"/>
            </FlyoutItem>
            <FlyoutItem Title="Inicio">
                <ShellContent ContentTemplate="{DataTemplate local:MenuPruebas}"/>
            </FlyoutItem>
            <FlyoutItem Title="Repaletizado">
                <ShellContent ContentTemplate="{DataTemplate local:Repaletizado}"/>
            </FlyoutItem>
            
        </Shell>
    </Application.MainPage>
</Application>
