    <FlyoutItem Title="SMM Registro Imp.Etiquetas">
        <ShellContent ContentTemplate="{DataTemplate local1:SMMRegImpEtiquetas}"/>
    </FlyoutItem>
    <FlyoutItem Title="SMM Registro Etiquetas pallet sala">
        <ShellContent ContentTemplate="{DataTemplate local1:SMMRegEtiqSala}"/>
    </FlyoutItem>
    <FlyoutItem Title="Control Higiene">
        <ShellContent ContentTemplate="{DataTemplate local1:Calidad_ControlHigiene}"/>
    </FlyoutItem>
    <FlyoutItem Title="Transferencias">
        <ShellContent ContentTemplate="{DataTemplate local1:Transferencias}"/>
    </FlyoutItem>
</Shell>
